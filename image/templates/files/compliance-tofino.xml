<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">

<service_bundle type='manifest' name='postboot'>

<service name='site/compliance/tofino' type='service' version='1'>
  <create_default_instance enabled='true' />
  <single_instance />

  <!-- Wait for multi-user... -->
  <dependency name='multi-user-server' grouping='require_all' restart_on='none'
    type='service'>
    <service_fmri value='svc:/milestone/multi-user-server' />
  </dependency>

  <!-- ... and make sure we run after the T6 has been configured. -->
  <dependency name='t6-mission' grouping='require_all' restart_on='none'
    type='service'>
    <service_fmri value='svc:/system/mission-t6' />
  </dependency>

  <exec_method type='method' name='start'
    exec='/usr/lib/compliance-tofino' timeout_seconds='3600' />

  <exec_method type='method' name='stop' exec=':true' timeout_seconds='30' />

  <property_group name='startd' type='framework'>
    <propval name='duration' type='astring' value='transient' />
  </property_group>

  <stability value='Unstable' />

  <template>
    <common_name>
      <loctext xml:lang='C'>compliance tofino</loctext>
    </common_name>
    <description>
      <loctext xml:lang='C'>brings switch zone up for compliance testing</loctext>
    </description>
  </template>
</service>

</service_bundle>
